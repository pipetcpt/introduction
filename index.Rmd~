get_link <- function(XXX, YYY, URL, GGG){
  sprintf('<img src="assets/app-%s.png" align="center" width="400" /><br> [%s](%s) [![GitHub stars](https://img.shields.io/github/stars/%s?style=social)](https://github.com/%s)', 
          XXX, YYY, URL, GGG, GGG)
}
